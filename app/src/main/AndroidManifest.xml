            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".games.Game1" />
        <activity android:name=".games.Game2" />
        <activity android:name=".games.Game4" />
        <activity android:name=".games.Game6" />
        <activity android:name=".games.Game5" />
