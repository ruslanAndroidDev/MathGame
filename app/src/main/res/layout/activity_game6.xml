<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fast.kopach.math.games.Game5">

    <fragment
        android:id="@+id/header"
        class="fast.kopach.math.games.HeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></fragment>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp">

        <Button
            android:id="@+id/game6_btn1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_btn"
            android:onClick="game6Click"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="32sp"
            android:textColor="#FFF"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_btn"
            android:onClick="game6Click"
            android:id="@+id/game6_btn2"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="32sp"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/game6_btn3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_btn"
            android:onClick="game6Click"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="32sp"
            android:textColor="#FFF"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/game6_btn4"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_btn"
            android:onClick="game6Click"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="32sp"
            android:textColor="#FFF"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="game6Click"
            android:id="@+id/game6_btn5"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_btn"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="32sp"
            android:textColor="#FFF"/>
    </LinearLayout>
</LinearLayout>
